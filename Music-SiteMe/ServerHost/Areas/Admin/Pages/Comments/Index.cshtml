@page
@model ServiceHost.Areas.Admin.Pages.Comments.IndexModel
@using CommentManagement.Configuration.Permissions
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت کامنت ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
    </div>
</div>

<div class="row"permission="@CommentPermissions.SearchComments">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در نظرات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <fieldset class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name" placeholder="نام فرستنده">
                    </fieldset>
                    <fieldset class="form-group">
                        <label class="sr-only" asp-for="SearchModel.OwnerRecordId"></label>
                        <input class="form-control" asp-for="SearchModel.OwnerRecordId" placeholder="کد">
                    </fieldset>
                    <button type="submit" class="btn gradient-green-tea white shadow-z-1-hover">جستجو</button>
                    <a class="btn gradient-blue-grey-blue white shadow-big-navbar" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row"permission="@CommentPermissions.ListComments">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کامنت ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>کد اثر</th>
                                    <th>نام</th>
                                    <th>ایمیل</th>
                                   
                                    <th>پیام</th>
                                    <th>تاریخ</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Comments)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.OwnerRecordId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                      
                                        <td>@item.Message</td>
                                        <td>@item.CommentDate</td>
                                       <td class="text-center">
                                            @if (item.IsCanceled)
                                            {
                                                <span class="text-danger">کنسل شده</span>
                                            }
                                            @if (!item.IsCanceled && !item.IsConfirmed)
                                            {
                                                <span class="text-warning">در انتظار</span>
                                            }
                                            @if (!item.IsCanceled && item.IsConfirmed)
                                            {
                                                <span class="text-success">تایید شده</span>
                                            }
                                        </td>
                                        <td>
                                            <a permission="@CommentPermissions.DeleteComment" asp-page="./Index" asp-page-handler="Cancel" asp-route-id="@item.Id"
                                               class="btn btn-danger waves-effect waves-light m-b-5">کنسل</a>

                                            @if (!item.IsConfirmed)
                                            {
                                                <a permission="@CommentPermissions.NoDeleteComment" asp-page="./Index" asp-page-handler="Confirm" asp-route-id="@item.Id"
                                                   class="btn btn-success waves-effect waves-light m-b-5">تایید</a>
                                            }

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}