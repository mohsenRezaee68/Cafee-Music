		<div class="row row--grid">
				<div class="col-12">
					<div class="main__filter">
						<form  method="get" asp-page="/UserMusic"  class="main__filter-search">
							<input type="search"  name="value" id="value"  placeholder="جست و جو ...">
							<button type="submit"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z"/></svg></button>
						</form>

						
					</div>

					@if(Model.values != null)

			{
									{
          <div class="row row--grid">
			<div class="col-12">
			<div class="row row--grid">
				          <!-- breadcrumb -->
				            <div class="col-12">
					           <ul class="breadcrumb">
						          <li class="breadcrumb__item breadcrumb__item--active">نتیجه جستجو : @Model.values</li>
					           </ul>
				            </div>
				
		             </div>

				<div class="row row--grid ">
					
						@foreach (var music in Model.MusicsTak)

					{	
						@if(music.IsCanceled == false)
						{
										
								
						
						<div class="col-6 col-sm-4 col-lg-3">
							<div class="product">
								<a data-link data-title="@music.Name" data-artist="@music.Singer"  href="~/Cafee-Music/@music.Track" class="product__img">
									@if(music.Photo=="")
									{
										<img src="~/کافه.png" alt="">
									}
									else
									{
                                       <img src="~/Cafee-Music/@music.Photo" alt="">
									}
								</a>
								<h3 class="product__title"><a href="#">@music.Name </a></h3>
								<span class="product__price">@music.Singer</span>
								<span>
									<a href="~/Cafee-Music/@music.Track" class="single-item__export">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21,14a1,1,0,0,0-1,1v4a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V15a1,1,0,0,0-2,0v4a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V15A1,1,0,0,0,21,14Zm-9.71,1.71a1,1,0,0,0,.33.21.94.94,0,0,0,.76,0,1,1,0,0,0,.33-.21l4-4a1,1,0,0,0-1.42-1.42L13,12.59V3a1,1,0,0,0-2,0v9.59l-2.29-2.3a1,1,0,1,0-1.42,1.42Z"></path></svg>
								</a>
                                </span>
								<span class="product__new">@music.UserName</span>
							</div>
						</div>

					}}
					
					

					
					
				</div>
			        	
				    
			       
					
				</div>
			</div>
					}
			}
			<div class="row row--grid">
			<div class="col-12">
			<div class="row row--grid">
				          <!-- breadcrumb -->
				            <div class="col-12">
					           <ul class="breadcrumb">
						          <li class="breadcrumb__item breadcrumb__item--active">منتشر شده </li>
					           </ul>
				            </div>
				
		             </div>
			 <div class="row row--grid">
						
							@foreach (var music in Model.music.Musics)

							{
								@if(music.IsCanceled == false)
						{
								<div class="col-6 col-sm-4 col-lg-3">
									<div class="product">
										<a data-link data-title="@music.Name" data-artist="@music.Singer" data-img="~/Site/img/covers/cover.svg" href="~/Cafee-Music/@music.Track" class="product__img">
											@if (music.Photo == null)
											{
												<img src="~/NS-WKMAG0730-1595944356.jpg" alt="">
											}
											else
											{
												<img src="~/Cafee-Music/@music.Photo" alt="">
											}
										</a>
										<h3 class="product__title"><a href="#">@music.Name </a></h3>
										<span class="product__price">@music.Singer</span>
										<span>
											<a href="~/Cafee-Music/@music.Track" class="single-item__export">
												<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21,14a1,1,0,0,0-1,1v4a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V15a1,1,0,0,0-2,0v4a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V15A1,1,0,0,0,21,14Zm-9.71,1.71a1,1,0,0,0,.33.21.94.94,0,0,0,.76,0,1,1,0,0,0,.33-.21l4-4a1,1,0,0,0-1.42-1.42L13,12.59V3a1,1,0,0,0-2,0v9.59l-2.29-2.3a1,1,0,1,0-1.42,1.42Z"></path></svg>
											</a>
										</span>
										<span class="product__new">@music.UserName</span>
									</div>
								</div>

							}
}

						}	
					</div>
					  
					
						
				</div>
		</div>
			<!---------------------------------->
			
			<div class="row row--grid">
				          <!-- breadcrumb -->
				            <div class="col-12">
					           <div class="breadcrumb">
						          <section class="breadcrumb__item breadcrumb__item--active">
									   <div class="row">
				
				<style>
					.my-center{
                      text-align:center;
                    }
                   .pagination {
                     display: inline-block;
                    }
                    
                    .pagination a {
                     color: #7FFF00;
                     float: right; /* شناور کردن در سمت راست */
                     padding: 8px 16px;
                     text-decoration: none; /* حذف خط زیر لینک */
					 border-radius:50px;
					  border: 1px solid #ddd;
					  margin:0 3px;
					  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.2),0 1px 5px 0 rgba(0,0,0,0.12);
                    }
                    
                    .pagination a.active{
                     background-color:#FF0000;
                     color:#fff;
                    }
                    
                    .pagination a:hover:not(.active){
                     background-color:#FF00FF;
                    }
                </style>
				 <div class="col-12">
				<div class="pagination">
					<table >
						<thead>
							<tr>
                           @if (Model.music.CurrentPage > 1)
									{
										<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
											<a href="/UserMusic?pageId=@(Model.music.CurrentPage - 1)">قبلی</a> </th> 
										<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
											<a href="/UserMusic?pageId=1">اولین صفحه</a></th>
									}
						   @for (int i = 1; i <= Model.music.PageCount; i++)
									{
									<th class="paginate_button @((i==Model.music.CurrentPage)? "active" : "")" aria-controls="dataTables-example" tabindex="0">
										<a  href="/UserMusic?pageId=@i">@i</a></th>	
									}
									@if (Model.music.CurrentPage < Model.music.PageCount)
									{
									<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
										<a href="/UserMusic?pageId=@(Model.music.CurrentPage + 1)">بعدی</a> </th>	
									<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
										<a href="/UserMusic?pageId=@(Model.music.PageCount)">اخرین صفحه</a></th>	
									}
							</tr>
						</thead>
					</table>
						 
					
                </div>
				 
			</div>
               
            </div>
									  
									  </section>
					           </div>
				            </div>
				
		  </div>
