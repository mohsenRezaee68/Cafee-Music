@page 

@model ServiceHost.Pages.AventsModel
@{
	ViewData["Title"] = "رویدادها";   	  
}

<div class="container-fluid">
		<div class="row row--grid">
				<!-- breadcrumb -->
				<div class="col-12">
					<ul class="breadcrumb">
						<li class="breadcrumb__item"><a href="index.html">صفحه اصلی</a></li>
						<li class="breadcrumb__item breadcrumb__item--active">رویدادها</li>
					</ul>
				</div>
				<!-- end breadcrumb -->

				<!-- title -->
				<div class="col-12">
					<div class="main__title main__title--page">
						<h1>منتشر شده ها</h1>
					</div>
				</div>
				<!-- end title -->
		</div>

			<!-- releases -->
		<div class="row row--grid">
				<div class="col-12">
					<div class="main__filter">
						<form  method="get" asp-page="/Avents"  class="main__filter-search">
							<input type="search"  name="value" id="value"  placeholder="جست و جو ...">
							<button type="submit"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.71,20.29,18,16.61A9,9,0,1,0,16.61,18l3.68,3.68a1,1,0,0,0,1.42,0A1,1,0,0,0,21.71,20.29ZM11,18a7,7,0,1,1,7-7A7,7,0,0,1,11,18Z"/></svg></button>
						</form>

						
					</div>

					@if(Model.values != null)

			{
									{
          <div class="row row--grid">
			<div class="col-12">
			<div class="row row--grid">
				          <!-- breadcrumb -->
				            <div class="col-12">
					           <ul class="breadcrumb">
						          <li class="breadcrumb__item breadcrumb__item--active">نتیجه جستجو : @Model.values</li>
					           </ul>
				            </div>
				
		             </div>

				<div class="row row--grid ">

					@foreach (var avent in Model.Avent)

					{	<div class="col-6 col-sm-4 col-lg-4">
								<div class="album">
									<div class="album__cover">
										<img src="~/Cafee-Music/@avent.Picture" alt="" asp-page="/Avent" asp-route-id="@avent.Slug">
										<a asp-page="/Avent" asp-route-id="@avent.Id"/>
										
										<span class="album__stat">
										
											</span>
									</div>
									<div class="album__title">
										<h3><a asp-page="/Avent"asp-route-id="@avent.Id"> @avent.Mozo </a></h3>
										
									</div>
								</div>
							</div>
						}
					
				</div>

					
				</div>
			</div>
					}
			}
			<div class="row row--grid">
			<div class="col-12">
			<div class="row row--grid">
				          <!-- breadcrumb -->
				            <div class="col-12">
					           <ul class="breadcrumb">
						          <li class="breadcrumb__item breadcrumb__item--active">منتشر شده </li>
					           </ul>
				            </div>
				
		             </div>
			 <div class="row row--grid">
				

						@foreach (var avent in Model.avent.avent)
				            {<div class="col-6 col-sm-4 col-lg-4">
								<div class="album">
									<div class="album__cover">
										<img src="~/Cafee-Music/@avent.Picture" alt="" asp-page="/Avent" asp-route-id="@avent.Slug">
										<a asp-page="/Avent" asp-route-id="@avent.Id"/>
										<span class="album__stat">
										
											</span>
									</div>
									<div class="album__title">
										<h3><a asp-page="/Avent"asp-route-id="@avent.Id"> @avent.Mozo </a></h3>
										
									</div>
								</div>
							</div>
				             }
				

						
					</div>

					<!------------------------------------------>
					
			<div class="row row--grid">
				          <!-- breadcrumb -->
				            <div class="col-12">
					           <div class="breadcrumb">
						          <section class="breadcrumb__item breadcrumb__item--active">
									   <div class="row">
				
				<style>
					.my-center{
                      text-align:center;
                    }
                   .pagination {
                     display: inline-block;
                    }
                    
                    .pagination a {
                     color: #7FFF00;
                     float: right; /* شناور کردن در سمت راست */
                     padding: 8px 16px;
                     text-decoration: none; /* حذف خط زیر لینک */
					 border-radius:50px;
					  border: 1px solid #ddd;
					  margin:0 3px;
					  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14),0 3px 1px -2px rgba(0,0,0,0.2),0 1px 5px 0 rgba(0,0,0,0.12);
                    }
                    
                    .pagination a.active{
                     background-color:#FF0000;
                     color:#fff;
                    }
                    
                    .pagination a:hover:not(.active){
                     background-color:#FF00FF;
                    }
                </style>
				 <div class="col-12">
				<div class="pagination">
					<table >
						<thead>
							<tr>
                           @if (Model.avent.CurrentPage > 1)
									{
										<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
											<a href="/Avents?pageId=@(Model.avent.CurrentPage - 1)">قبلی</a> </th> 
										<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
											<a href="/Avents?pageId=1">اولین صفحه</a></th>
									}
						   @for (int i = 1; i <= Model.avent.PageCount; i++)
									{
									<th class="paginate_button @((i==Model.avent.CurrentPage)? "active" : "")" aria-controls="dataTables-example" tabindex="0">
										<a  href="/Avents?pageId=@i">@i</a></th>	
									}
									@if (Model.avent.CurrentPage < Model.avent.PageCount)
									{
									<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
										<a href="/Avents?pageId=@(Model.avent.CurrentPage + 1)">بعدی</a> </th>	
									<th class="paginate_button" aria-controls="dataTables-example" tabindex="0">
										<a href="/Avents?pageId=@(Model.avent.PageCount)">اخرین صفحه</a></th>	
									}
							</tr>
						</thead>
					</table>
						 
					
                </div>
				 
			</div>
               
            </div>
									  
									  </section>
					           </div>
				            </div>
				
		  </div>
					<!-------------------------------------------->
				</div>
		</div>
			<!-- end releases -->
        </div>
      </div>
		
	

</div>
