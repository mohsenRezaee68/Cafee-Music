@page 
@model ServiceHost.Pages.AlbomModel
@{
   
    ViewData["Title"] = Model.music.Name;
	  ViewData["keywords"] = Model.music.Keywords;
    ViewData["metaDescription"] = Model.music.Description;
}


		<div class="container-fluid">
			<div dir="rtl" class="row row--grid">
				<!-- breadcrumb -->
				<div class="col-12">
					<ul class="breadcrumb">
						<li class="breadcrumb__item"><a href="index.html">صفحه اصلی</a></li>
						<li class="breadcrumb__item"><a href="releases.html">@Model.music.Catgory</a></li>
						<li class="breadcrumb__item breadcrumb__item--active">@Model.music.Name</li>
					</ul>
				</div>
				<!-- end breadcrumb -->

				<!-- title -->
				<div class="col-12">
					<div class="main__title main__title--page">
						<h1>@Model.music.Name - @Model.music.Singer</h1>
					</div>
				</div>
				<!-- end title -->

				<div class="col-12">
					<div class="release">
						<div class="release__content">
							<div class="release__cover">
								<img src="~/Cafee-Music/@Model.music.Picture" alt="@Model.music.PictureAlt">
							</div>
							<div class="release__stat">
								<span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z"/></svg> (@Model.music.Tracks.Count) آهنگ</span>
								
							</div>
							
							<a href="~/Cafee-Music/@Model.music.Dawnlod"download="@Model.music.Name "  class="release__buy open-modal">دانلود آلبوم</a>
						</div>

						<div class="release__list">
							<ul class="main__list main__list--playlist main__list--dashbox">

							 

								@foreach(var tracck in Model.music.Tracks)
								{
							
							<li class="single-item">
									<a data-playlist data-title="@tracck.TrackName" data-artist="@Model.music.Name" data-img="~/Cafee-Music/@Model.music.Picture" href="~/Cafee-Music/@tracck.Track" class="single-item__cover">
										<img src="~/Site/img/covers/cover.svg" alt="">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z"/></svg>
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M16,2a3,3,0,0,0-3,3V19a3,3,0,0,0,6,0V5A3,3,0,0,0,16,2Zm1,17a1,1,0,0,1-2,0V5a1,1,0,0,1,2,0ZM8,2A3,3,0,0,0,5,5V19a3,3,0,0,0,6,0V5A3,3,0,0,0,8,2ZM9,19a1,1,0,0,1-2,0V5A1,1,0,0,1,9,5Z"/></svg>
									</a>
									<div class="single-item__title">
										<h4><a href="#"> @tracck.TrackName </a></h4>
										<span><a href="artist.html"> @Model.music.Name</a></span>
									</div>
									
									<a href="~/Cafee-Music/@tracck.Track" class="single-item__export">
										<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21,14a1,1,0,0,0-1,1v4a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V15a1,1,0,0,0-2,0v4a3,3,0,0,0,3,3H19a3,3,0,0,0,3-3V15A1,1,0,0,0,21,14Zm-9.71,1.71a1,1,0,0,0,.33.21.94.94,0,0,0,.76,0,1,1,0,0,0,.33-.21l4-4a1,1,0,0,0-1.42-1.42L13,12.59V3a1,1,0,0,0-2,0v9.59l-2.29-2.3a1,1,0,1,0-1.42,1.42Z"></path></svg>
									</a>
									
								</li>
							
						}
								
						
							</ul>
						</div>
					</div>
				</div>

				<div class="col-12 col-lg-8">
					<div class="article">
						<!-- article content -->
						<div class="article__content">
							<h4>درباره آلبوم </h4>
							<p>@Model.music.MetaDescription</p>
							
						</div>
						<!-- end article content -->

						<!-- share -->
						
						<!-- end share -->

						<!-- comments -->
						<div class="comments">
							<div class="comments__title">
								<h4>نظرات</h4>
								
								<span>(@Model.music.Comments.Count)</span>
							</div>

							<ul class="comments__list">
								  @foreach (var comment in Model.music.Comments)
                                                    {
													
                               
								<li class="comments__item comments__item--quote">
									<div class="comments__autor" id="comment-@comment.Id">
										<img class="comments__avatar" src="~/Site/img/avatar.svg" alt="">
										<span class="comments__name"> @comment.Name </span>
										<span class="comments__time"> @comment.CreationDate </span>
									</div>
									<p class="comments__text">
										
										@comment.Message</p>
									<div class="comments__actions">
										<div class="comments__rate">
											
                                        </div>
										 <span class="reply-btn">
                                                       
                                                    </span>
									</div>
								</li>

								
								}
								
							</ul>

							<form method="post">
								
							        	<div class="col-12" id="postComment">
							            <div class="sign__group">
							        	  <input type="text" name="name" class="sign__input" placeholder="نام">
							           </div>
							        </div>
							         <div class="col-12 ">
							           <div class="sign__group">
							        	  <input type="email" name="email" class="sign__input" placeholder="ایمیل">
							           </div>
							         </div>
                                 
								 <div class="col-12">
								   <div class="sign__group">
								    	<textarea name="message" class="sign__textarea" placeholder="پیام خود را بنویسید . . ."></textarea>
								   </div>
							   </div>
								<input type="hidden" name="ownerRecordId" value="@Model.music.Id" />
								<input type="hidden" name="musicSlug" value="@Model.music.Slug" />
								
								<div class="col-12 col-xl-3">
								   <button type="submit" class="sign__btn">ارسال</button>
							    </div>
								
							</form>
						</div>
						<!-- end comments -->

					</div>
				</div>
			</div>
		</div>
