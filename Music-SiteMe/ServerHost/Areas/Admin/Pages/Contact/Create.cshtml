@model CommentManagement.Application.Contracts.Contact.CreateContact
@{
}

<div class="modal-header">
    <div class ="Close">
        <button type="button" class="btn mr-1 btn-secondary" data-dismiss="modal" aria-hidden="true">×</button>
    </div>
    
    <h4 class="modal-title">ثبت ازلاعات</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Etelaat" class="control-label">اطلاعات</label>
                    <input type="text" class="form-control" asp-for="Etelaat" >
                    <span asp-validation-for="Etelaat" class="error"></span>
                </div>
            </div>
            
        </div>
         <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Matn" class="control-label">متن</label>
                    <textarea class="form-control autogrow" asp-for="Matn"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Matn" class="error"></span>
                </div>
            </div>
        </div>
      <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">ایمیل</label>
                    <input type="text" class="form-control" asp-for="Email" >
                    <span asp-validation-for="Email" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">تلفن</label>
                    <input type="text" class="form-control" asp-for="Phone">
                    <span asp-validation-for="Phone" class="error"></span>
                </div>
            </div>
        </div>

      <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Telegram" class="control-label">تلگرام</label>
                    <input type="text" class="form-control" asp-for="Telegram" >
                    <span asp-validation-for="Telegram" class="error"></span>
                </div>
             </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Watsap" class="control-label">واتساپ</label>
                    <input type="text" class="form-control" asp-for="Watsap" >
                    <span asp-validation-for="Watsap" class="error"></span>
                </div>
             </div>
       </div>
        
        
        
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Instagram" class="control-label">اینستاگرام</label>
                    <input type="text" class="form-control" asp-for="Instagram">
                    <span asp-validation-for="Instagram" class="error"></span>
                </div>
            </div>
            
        </div>
       
        
        
    
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>