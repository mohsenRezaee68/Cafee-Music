@model List<_01_LampshadeQuery.Contracts.Article.ArticleQueryModel>


<section class="row row--grid">
				<!-- title -->
				<div class="col-12">
					<div class="main__title">
						<h2>مقالات</h2>

						<a href="news.html" class="main__link">دیدن همه <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z"/></svg></a>
					</div>
				</div>
				<!-- end title -->

				 @foreach (var article in Model)
                                    {
				<!-- video post -->
				<div class="col-12 col-sm-6 col-lg-4">
					<div class="post">
						<a asp-page="/Article"asp-route-id="@article.Id" class="post__img">
							<img  src="~/Cafee-Music/@article.Picture" >
						</a>

						

						<div class="post__content">
							<a asp-page="/Article"asp-route-id="@article.Id" class="post__category">@article.PublishDate</a>
							<h3 class="post__title"><a asp-page="/Article"asp-route-id="@article.Id">@article.ShortDescription</a></h3>
							<div class="post__meta">
						
							</div>
						</div>
					</div>
				</div>
				<!-- end video post -->
				}
				
				<!-- end post -->
</section>