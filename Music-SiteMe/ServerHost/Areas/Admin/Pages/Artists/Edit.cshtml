@page
@model ServerHost.Areas.Admin.Pages.Artists.EditModel

@{
     Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "ویرایش ";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> ویرایش بیوگرافی:@Model.Artist.Laghab</h3>
            </div>
             <div class="panel-body">
                <form asp-page="./Edit" asp-page-handler="Edit"
                    method="post"
                   
                       >
                    <div class="row">
                        <div class="col-md-4">
                             <div class="form-group">
                                <label asp-for="@Model.Artist.Name" class="control-label">نام</label>
                                  <input type="text" class="form-control" asp-for="@Model.Artist.Name" >
                                  <span asp-validation-for="@Model.Artist.Name" class="error"></span>
                              </div>
                        </div>
                         <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.Artist.Laghab" class="control-label">لغب</label>
                                <input type="text" class="form-control" asp-for="@Model.Artist.Laghab" onchange="makeSlug('Laghab', 'Slug')">
                                <span asp-validation-for="@Model.Artist.Laghab" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="@Model.Artist.Slug" class="control-label">اسلاگ</label>
                                <input type="text" class="form-control" asp-for="@Model.Artist.Slug">
                                <span asp-validation-for="@Model.Artist.Slug" class="error"></span>
                            </div>
                        </div>
                       
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="@Model.Artist.Picture" class="control-label">عکس</label>
                                <input type="file" class="form-control" asp-for="@Model.Artist.Picture" accept="image/*">
                                <span asp-validation-for="@Model.Artist.Picture" class="error"></span>
                            </div>
                        </div>
                       
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Artist.PictureAlt" class="control-label">Alt</label>
                                <input type="text" class="form-control" asp-for="@Model.Artist.PictureAlt">
                                <span asp-validation-for="@Model.Artist.PictureAlt" class="error"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="@Model.Artist.PictureTitle" class="control-label"> عنوان تصویر</label>
                                <input type="text" class="form-control" asp-for="@Model.Artist.PictureTitle">
                                <span asp-validation-for="@Model.Artist.PictureTitle" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="@Model.Artist.ShertText" class="control-label">معرفی کوتاه</label>
                                <textarea class="form-control autogrow" asp-for="@Model.Artist.ShertText" onchange="fillField('ShertText','MetaDescription')"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="@Model.Artist.ShertText" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="@Model.Artist.Text" class="control-label">معرفی</label>
                                <textarea class="form-control" id="BodyContent" asp-for="@Model.Artist.Text"></textarea>
                                <span asp-validation-for="@Model.Artist.Text" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="@Model.Artist.Keywords" class="control-label">کلمات کلیدی</label>
                                <input type="text" class="form-control" asp-for="@Model.Artist.Keywords">
                                <span asp-validation-for="@Model.Artist.Keywords" class="error"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label asp-for="@Model.Artist.MetaDescription" class="control-label">توضیحات متا</label>
                                <textarea class="form-control autogrow" asp-for="@Model.Artist.MetaDescription"
                                          style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                                <span asp-validation-for="@Model.Artist.MetaDescription" class="error"></span>
                            </div>
                        </div>
                    </div>
                    
                   <input type="hidden" asp-for="Artist.Id" value="@Model.Artist.Id" />
                    <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
                    <a asp-page="./Index" class="btn btn-default waves-effect">بازگشت</a>
                </form>
            </div>
        </div>
    </div>
</div>
